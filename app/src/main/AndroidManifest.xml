<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doscope.kalei">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Framework_Theme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Framework_MainTheme"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".kaleidoscopeActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustNothing|adjustResize" />
        <activity
            android:name=".kaleidoscope2Activity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustNothing|adjustResize" />
    </application>

</manifest>